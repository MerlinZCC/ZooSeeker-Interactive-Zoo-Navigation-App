<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="130dp">

    <ImageView
        android:id="@+id/animal_search_image"
        android:layout_width="61dp"
        android:layout_height="74dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="36dp"
        android:gravity="center"
        android:src="@drawable/cheetah"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/display_exhibit_name"
        android:layout_width="197dp"
        android:layout_height="24dp"
        android:layout_marginStart="112dp"
        android:layout_marginTop="52dp"
        android:text="@string/SSI_displayed_exhibit_name"
        android:textStyle="bold"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/display_exhibit_loc"
        android:layout_width="197dp"
        android:layout_height="21dp"
        android:layout_marginStart="112dp"
        android:layout_marginBottom="32dp"
        android:text="Somewhere..."
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/delete_btn"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginEnd="26dp"
        android:clickable="true"
        android:text="@string/SSI_x"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.312"
        app:layout_constraintStart_toEndOf="@+id/display_exhibit_name"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.509" />

</androidx.constraintlayout.widget.ConstraintLayout>